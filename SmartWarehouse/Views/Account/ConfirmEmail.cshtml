@{
    ViewBag.Title = "E-posta Onayı";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Smart Warehouse</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.4.1/cosmo/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .confirm-container {
            width: 100%;
            max-width: 550px;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
            animation: zoomIn 0.6s ease;
            text-align: center;
        }

        @@keyframes zoomIn {
            from {
                opacity: 0;
                transform: scale(0.8);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .confirm-header {
            background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
            padding: 50px 40px;
            color: #fff;
        }

        .success-icon {
            width: 100px;
            height: 100px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 50px;
            margin: 0 auto 25px;
            backdrop-filter: blur(10px);
            animation: checkmark 0.8s ease;
        }

        @@keyframes checkmark {
            0% {
                transform: scale(0) rotate(45deg);
            }

            50% {
                transform: scale(1.2) rotate(45deg);
            }

            100% {
                transform: scale(1) rotate(0deg);
            }
        }

        .confirm-header h2 {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 12px;
        }

        .confirm-header p {
            font-size: 16px;
            opacity: 0.95;
            line-height: 1.5;
        }

        .confirm-body {
            padding: 50px 40px;
        }

        .success-message {
            background: #d4edda;
            border-left: 4px solid #28a745;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
            text-align: left;
        }

            .success-message h4 {
                color: #155724;
                font-size: 16px;
                font-weight: 600;
                margin-bottom: 10px;
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .success-message h4 i {
                    color: #28a745;
                }

            .success-message p {
                color: #155724;
                font-size: 14px;
                margin: 0;
                line-height: 1.6;
            }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin: 30px 0;
        }

        .feature-item {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            .feature-item:hover {
                background: #e9ecef;
                transform: translateY(-3px);
            }

            .feature-item i {
                font-size: 32px;
                color: #667eea;
                margin-bottom: 10px;
            }

            .feature-item h5 {
                font-size: 14px;
                font-weight: 600;
                color: #495057;
                margin: 0;
            }

        .btn-login {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 16px 40px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            text-decoration: none;
            margin-top: 20px;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
                color: #fff;
                text-decoration: none;
            }

        .help-text {
            margin-top: 30px;
            padding-top: 30px;
            border-top: 1px solid #e9ecef;
            color: #6c757d;
            font-size: 14px;
        }

        @@media (max-width: 768px) {
            .confirm-container {
                max-width: 100%;
            }

            .confirm-header {
                padding: 40px 30px;
            }

            .success-icon {
                width: 80px;
                height: 80px;
                font-size: 40px;
            }

            .confirm-header h2 {
                font-size: 26px;
            }

            .confirm-body {
                padding: 40px 30px;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>

    <div class="confirm-container">

        <!-- Header -->
        <div class="confirm-header">
            <div class="success-icon">
                <i class="fas fa-check"></i>
            </div>
            <h2>E-posta Onaylandı!</h2>
            <p>Hesabınız başarıyla doğrulandı</p>
        </div>

        <!-- Body -->
        <div class="confirm-body">

            <div class="success-message">
                <h4>
                    <i class="fas fa-check-circle"></i>
                    Tebrikler!
                </h4>
                <p>
                    E-posta adresiniz başarıyla onaylandı. Artık Smart Warehouse sisteminin tüm özelliklerini kullanabilirsiniz.
                </p>
            </div>

            <div class="features-grid">
                <div class="feature-item">
                    <i class="fas fa-box"></i>
                    <h5>Ürün Yönetimi</h5>
                </div>
                <div class="feature-item">
                    <i class="fas fa-chart-line"></i>
                    <h5>Satış Takibi</h5>
                </div>
                <div class="feature-item">
                    <i class="fas fa-users"></i>
                    <h5>Müşteri Kayıtları</h5>
                </div>
                <div class="feature-item">
                    <i class="fas fa-warehouse"></i>
                    <h5>Stok Kontrolü</h5>
                </div>
            </div>

            <a href="@Url.Action("Login", "Account")" class="btn-login">
                <i class="fas fa-sign-in-alt"></i>
                Giriş Yap ve Başla
            </a>

            <div class="help-text">
                Sorun mu yaşıyorsunuz? Destek ekibimizle iletişime geçin.
            </div>
        </div>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</body>
</html>