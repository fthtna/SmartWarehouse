@model SmartWarehouse.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Şifremi Unuttum";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Smart Warehouse</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.4.1/cosmo/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .forgot-container {
            width: 100%;
            max-width: 500px;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
            animation: slideUp 0.6s ease;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .forgot-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 40px 40px 30px;
            color: #fff;
            text-align: center;
        }

        .forgot-icon {
            width: 80px;
            height: 80px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 36px;
            margin: 0 auto 20px;
            backdrop-filter: blur(10px);
        }

        .forgot-header h2 {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .forgot-header p {
            font-size: 15px;
            opacity: 0.9;
            line-height: 1.5;
        }

        .forgot-body {
            padding: 40px;
        }

        .info-box {
            background: #fff3cd;
            border-left: 4px solid #ffc107;
            padding: 14px 18px;
            border-radius: 6px;
            margin-bottom: 25px;
            display: flex;
            align-items: flex-start;
            gap: 12px;
            font-size: 14px;
            color: #856404;
        }

            .info-box i {
                color: #ffc107;
                font-size: 18px;
                margin-top: 2px;
            }

        .form-group {
            margin-bottom: 25px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: 600;
                color: #495057;
                font-size: 14px;
            }

        .form-control-modern {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }

            .form-control-modern:focus {
                outline: none;
                border-color: #667eea;
                background: #fff;
                box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            }

        .btn-send {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            margin-top: 10px;
        }

            .btn-send:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
            }

        .back-link {
            text-align: center;
            margin-top: 25px;
            color: #6c757d;
            font-size: 14px;
        }

            .back-link a {
                color: #667eea;
                font-weight: 600;
                text-decoration: none;
                display: inline-flex;
                align-items: center;
                gap: 6px;
            }

                .back-link a:hover {
                    text-decoration: underline;
                }

        .text-danger {
            color: #dc3545;
            font-size: 13px;
            margin-top: 6px;
            display: block;
        }

        .validation-summary-errors {
            background: #fee;
            border: 1px solid #fcc;
            color: #c00;
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

            .validation-summary-errors ul {
                margin: 0;
                padding-left: 20px;
            }

        .steps-box {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-top: 25px;
        }

            .steps-box h5 {
                font-size: 14px;
                font-weight: 600;
                color: #495057;
                margin-bottom: 15px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

                .steps-box h5 i {
                    color: #667eea;
                }

        .steps-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .steps-list li {
                font-size: 13px;
                color: #6c757d;
                margin-bottom: 10px;
                display: flex;
                gap: 10px;
            }

        .step-number {
            width: 24px;
            height: 24px;
            background: #667eea;
            color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 11px;
            font-weight: 600;
            flex-shrink: 0;
        }

        @@media (max-width: 768px) {
            .forgot-container {
                max-width: 100%;
            }

            .forgot-header {
                padding: 30px 25px 20px;
            }

            .forgot-icon {
                width: 60px;
                height: 60px;
                font-size: 28px;
            }

            .forgot-header h2 {
                font-size: 24px;
            }

            .forgot-body {
                padding: 30px 25px;
            }
        }
    </style>
</head>
<body>

    <div class="forgot-container">

        <!-- Header -->
        <div class="forgot-header">
            <div class="forgot-icon">
                <i class="fas fa-lock"></i>
            </div>
            <h2>Şifremi Unuttum</h2>
            <p>E-posta adresinize şifre sıfırlama bağlantısı gönderilecektir</p>
        </div>

        <!-- Body -->
        <div class="forgot-body">

            <div class="info-box">
                <i class="fas fa-info-circle"></i>
                <div>
                    Kayıtlı e-posta adresinizi girin. Size şifre sıfırlama bağlantısı içeren bir e-posta göndereceğiz.
                </div>
            </div>

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "validation-summary-errors" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, "E-posta Adresi")
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control-modern", placeholder = "ornek@email.com", type = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn-send">
                    <i class="fas fa-paper-plane"></i> Şifre Sıfırlama Bağlantısı Gönder
                </button>

                <div class="steps-box">
                    <h5>
                        <i class="fas fa-list-ol"></i>
                        Sonraki Adımlar
                    </h5>
                    <ul class="steps-list">
                        <li>
                            <span class="step-number">1</span>
                            <span>E-posta adresinizi kontrol edin</span>
                        </li>
                        <li>
                            <span class="step-number">2</span>
                            <span>Şifre sıfırlama bağlantısına tıklayın</span>
                        </li>
                        <li>
                            <span class="step-number">3</span>
                            <span>Yeni şifrenizi belirleyin</span>
                        </li>
                    </ul>
                </div>

                <div class="back-link">
                    <a href="@Url.Action("Login", "Account")">
                        <i class="fas fa-arrow-left"></i>
                        Giriş sayfasına dön
                    </a>
                </div>
            }
        </div>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

</body>
</html>